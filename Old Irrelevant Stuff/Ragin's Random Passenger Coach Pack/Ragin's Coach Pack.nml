grf{
    grfid: "ZM\03\01";
    name: string(STR_GRF_NAME);
    desc: string(STR_GRF_DESCRIPTION);
    version: 0;
    min_compatible_version: 0;
}

railtypetable {
    RAIL
}

cargotable {
    PASS, MAIL,
// Misc
    TOUR,
}

/* Fix depot view */
traininfo_y_offset = 2;
train_width_32_px = 1;

// 6 Template
template template_6(x, y) {
    //left_x, upper_y, width, height, offset_x, offset_y
    //                            more negative to shift left
    //                                            more negative to shift up
    [ x,        y,        8,        19,        -3,            -13]
    [ x+13,      y,        18,        20,        -11,        -11]
    [ x+40,     y,        25,        16,        -9,        -12]
    [ x+70,     y,        18,        20,        -1,            -11]
    [ x+89,     y+5,        8,        19,         -3,            -9]
    [ x+98,     y,        18,        20,        -15,        -11]
    [ x+121,    y,        25,        16,        -17,        -12]
    [ x+155,    y,        20,        18,         -5,            -11]
}

//7 Template
template template_7(x, y) {
    //left_x, upper_y, width, height, offset_x, offset_y
    //                            more negative to shift left
    //                                            more negative to shift up
    [ x,        y,        8,         21,        -3,         -13]
    [ x+11,      y,       20,        20,        -13,        -11]
    [ x+36,     y,        29,        16,        -17,        -12]
    [ x+68,     y,        20,        20,        -5,         -12]
    [ x+89,     y+3,       8,        21,        -3,         -13]
    [ x+98,     y,        20,        20,        -13,        -12]
    [ x+121,    y,        29,        16,        -17,        -12]
    [ x+155,    y,        20,        20,        -5,         -11]
}

// 8 Template
template template_8(x, y) {
    //left_x, upper_y, width, height, offset_x, offset_y
    //                            more negative to shift left
    //                                            more negative to shift up
    [ x,        y,        8,        24,        -3,            -14]
    [ x+9,      y,        22,        20,        -14,        -11]
    [ x+32,     y,        33,        16,        -17,        -12]
    [ x+66,     y,        22,        20,        -6,            -11]
    [ x+89,     y,        8,        24,        -3,            -14]
    [ x+98,     y,        22,        20,        -14,        -11]
    [ x+121,    y,        33,        16,        -17,        -12]
    [ x+155,    y,        22,        20,        -6,            -11]
}

