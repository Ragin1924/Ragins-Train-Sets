spriteset(spriteset_Redfern_Coach, "gfx/Redfern Suburban Coach.png") {template_6(7,39)}

//Vehicle
item (FEAT_TRAINS, item_Redfern_Coach) {
    property {
        sprite_id:                        SPRITE_ID_NEW_TRAIN;
        refit_cost:                        0;
        climates_available:                ALL_CLIMATES;
        bitmask_vehicle_info:            0;
        misc_flags:                        bitmask(TRAIN_FLAG_2CC);

        track_type:                        RAIL;

        name: string(STR_REDFERN_COACH);
        introduction_date:                date(1860,1,1);
        model_life:                        50;
        length:                            6;

        weight:                         16 ton;
        speed:                          80 km/h;
        cost_factor:                     28;
        running_cost_factor:             100;

        refittable_cargo_classes:        bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:        bitmask();
        default_cargo_type:                PASS;
        cargo_capacity:                    70;

    }
    graphics {
        default:                        spriteset_Redfern_Coach;
//        purchase:                        spriteset_MK1_CARRIAGE_purchase;
    }
}


